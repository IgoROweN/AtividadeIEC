name: CI/CD Pipeline

on:
  push:
    branches:
      - main  # Executa nas mudan√ßas da branch principal

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Check out code
        uses: actions/checkout@v2

      - name: Log in to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ DOCKER_USERNAME }}
          password: ${{ DOCKER_PASSWORD }}

      - name: Build and push Docker image
        run: |
          docker build -t ${{ DOCKER_USERNAME }}/minha-aplicacao:${{ CHAVE_SSH_SERVER }} .
          docker push ${{ DOCKER_USERNAME }}/minha-aplicacao:${{ CHAVE_SSH_SERVER }}

      - name: Deploy to Remote Server
        uses: appleboy/ssh-action@v0.1.4
        with:
          host: 201.23.3.86
          username: aluno
          key: ${{ secrets.SSH_KEY }}
          port: 22
          script: |
            docker pull ${{ DOCKER_USERNAME }}/minha-aplicacao:${{ CHAVE_SSH_SERVER }}
            docker stop minha-aplicacao || true
            docker rm minha-aplicacao || true
            docker run -d -p 8092:3000 --name minha-aplicacao ${{ DOCKER_USERNAME }}/minha-aplicacao:${{ CHAVE_SSH_SERVER }}
